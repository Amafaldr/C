Exercicios academicos resolvidos em linguagem C


#include<stdio.h>
#include<stdlib.h>

struct fatec{
    char nome [30];
    float nota[2];
    float media;
};

int main(){
    int i,j,k;
    float media = 0;

    struct fatec alunos[4];

    printf("Informe a quantidade de alunos: ");
    scanf("%d", &j);

    for (i=0;i<j;i++){
        printf ("\nInforme o nome do aluno: ");
        scanf("%s", alunos[i].nome);

        for (k=0; k<2; k++){
            printf("\nInforme a %d nota: ", k+1);
            scanf("%f", &alunos[i].nota[k]);
            media += alunos[i].nota[k];
        }

        alunos[i].media = media/2;
        media = 0;
    }

    for (i=0;i<j;i++){
        printf("\nNome do aluno: %s\n",alunos[i].nome);
        for(int k=0;k<2;k++){
            printf("Nota %d: %.2f\n",k+1,alunos[i].nota[k]);
        }
        printf("Mï¿½dia: %.2f\n",alunos[i].media);
    }

    system("pause");
    return 0;
}

